# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                  controllers.Application.login()
POST     /authenticate                  controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

GET     /createaccount              controllers.Application.createaccount()
POST     /register                   controllers.Application.register()

POST    /upload                     controllers.Workflows.upload()
GET     /file/*id                   controllers.Workflows.file(id : Long)

GET     /manager             controllers.Application.manager()

# Workflow page
GET     /workflow/*name             controllers.Workflows.workflow(name: String)

# Run workflow
POST     /test/*name                     controllers.Workflows.test(name: String)

# Workflow result
GET     /result/*id                 controllers.Workflows.result(id : Long, format : String ?= null)
GET     /error/*id                 controllers.Workflows.error(id : Long)
GET     /output/*id                 controllers.Workflows.output(id : Long)

# Workflow builder

GET     /builder                controllers.Application.builder()

# REST Api routes for data

GET     /data/uploads            controllers.Data.uploads()
GET     /data/status/*id                 controllers.Data.status(id : Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
