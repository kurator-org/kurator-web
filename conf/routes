# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                  controllers.Application.login()
POST     /authenticate                  controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

GET     /createaccount              controllers.Application.createaccount()
POST     /register                   controllers.Application.register()

POST    /upload                     controllers.Workflow.upload()

# Workflow page
GET     /helloworkflow                   controllers.Workflow.helloworkflow()
GET     /wormsworkflow                   controllers.Workflow.wormsworkflow()
GET     /geoworkflow                   controllers.Workflow.geoworkflow()

# Workflow run
GET     /runhello                   controllers.Workflow.runhello()
GET     /runworms                   controllers.Workflow.runworms()
GET     /rungeo                     controllers.Workflow.rungeo()

# Workflow result
GET     /result/*id                 controllers.Workflow.result(id : Long)

# Javascript routes
GET   /jsRoutes                controllers.Application.jsRoutes()

GET     /builder                controllers.Application.builder()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
