# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                  controllers.Application.login()
POST     /authenticate                  controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

GET     /createaccount              controllers.Application.createaccount()
POST     /register                   controllers.Application.register()

POST    /upload                     controllers.Workflow.upload()
GET     /file/*id                   controllers.Workflow.file(id : Long)

# Workflow page
GET     /helloworkflow                   controllers.Workflow.helloworkflow()
GET     /wormsworkflow                   controllers.Workflow.wormsworkflow()
GET     /geoworkflow                   controllers.Workflow.geoworkflow()

GET     /workflow/*name             controllers.Workflow.workflow(name: String)
# Workflow run
GET     /runhello                   controllers.Workflow.runhello()
GET     /runworms/*id                   controllers.Workflow.runworms(id : Long)
GET     /rungeo/*id                     controllers.Workflow.rungeo(id : Long)

POST     /test/*name                     controllers.Workflow.test(name: String)

# Workflow result
GET     /result/*id                 controllers.Workflow.result(id : Long)
GET     /error/*id                 controllers.Workflow.error(id : Long)
GET     /output/*id                 controllers.Workflow.output(id : Long)

# Javascript routes
GET   /jsRoutes                controllers.Application.jsRoutes()

GET     /builder                controllers.Application.builder()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
