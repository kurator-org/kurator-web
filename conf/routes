# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                  controllers.Application.login()
POST     /authenticate                  controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

GET     /createaccount              controllers.Application.createaccount()
POST     /register                   controllers.Application.register()

POST    /upload                     controllers.Workflow.upload()

# Hello action
GET     /hello                      controllers.Application.sayHello()

# Workflow page
GET     /workflow                   controllers.Workflow.workflow()
GET     /wormsworkflow                   controllers.Workflow.wormsworkflow()

# Workflow run
GET     /run                   controllers.Workflow.run()
GET     /runworms                   controllers.Workflow.runworms()

# Workflow result
GET     /result/*file                 controllers.Workflow.result(file)

# Javascript routes
GET   /jsRoutes                controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
